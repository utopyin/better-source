{
	"name": "better-source",
	"private": true,
	"scripts": {
		"build": "turbo --filter \"./packages/*\" build",
		"dev": "turbo --filter \"./packages/*\" dev",
		"clean": "turbo --filter \"./packages/*\" clean && rm -rf node_modules",
		"format": "biome format . --write",
		"lint": "biome check .",
		"lint:fix": "biome check . --apply",
		"release": "turbo --filter \"./packages/*\" build && turbo --filter \"./packages/*\" release"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"turbo": "^2.5.0",
		"typescript": "5.8.2"
	},
	"packageManager": "bun@1.2.10",
	"workspaces": [
		"packages/*",
		"dev/*"
	]
}
